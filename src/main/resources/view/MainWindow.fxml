<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="yap.MainWindow">

    <children>

        <!-- Chat history -->
        <ScrollPane fx:id="scrollPane"
                    hbarPolicy="NEVER"
                    fitToWidth="true"
                    prefHeight="557.0" prefWidth="400.0"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="42.0">
            <content>
                <VBox fx:id="dialogContainer"
                      fillWidth="true"
                      prefHeight="552.0" prefWidth="388.0" />
            </content>
        </ScrollPane>

        <!-- Input -->
        <TextField fx:id="userInput"
                   onAction="#handleUserInput"
                   prefHeight="41.0" prefWidth="324.0"
                   layoutY="558.0"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.bottomAnchor="1.0"/>
        <Button fx:id="sendButton"
                text="Send"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="41.0" prefWidth="76.0"
                layoutX="324.0" layoutY="558.0"
                AnchorPane.rightAnchor="0.0"
                AnchorPane.bottomAnchor="1.0"/>

    </children>
</AnchorPane>

